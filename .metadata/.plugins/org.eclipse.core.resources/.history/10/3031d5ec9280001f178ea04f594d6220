package DiamondShop.Controller.User;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.servlet.ModelAndView;

import DiamondShop.Dto.ProductsDto;
import DiamondShop.Service.User.IProductService;

@Controller
public class ProductController extends BaseController {
	@Autowired
	private IProductService _iProductService;
	
	@RequestMapping(value = {"chi-tiet-san-pham/{id}"})
	public ModelAndView Index(@PathVariable int id) {
		_mvShare.setViewName("user/products/product");

		// Đảm bảo sản phẩm có id = 1 luôn được lấy trước
		List<ProductsDto> allProducts = _iProductService.GetProductByIDCategory(idCategory);
		
		// Lấy sản phẩm có id = 1 và thêm vào đầu danh sách nếu có
		ProductsDto productWithId1 = _iProductService.GetProductByID(1);
		if (productWithId1 != null) {
			allProducts.remove(productWithId1); // Loại bỏ nếu đã tồn tại trong danh sách
			allProducts.add(0, productWithId1); // Thêm vào đầu danh sách
		}

		// Thêm danh sách sản phẩm đã chỉnh sửa vào Model
		_mvShare.addObject("products", allProducts);
		
		// Lấy danh mục của sản phẩm hiện tại
		int idCategory = _iProductService.GetProductByID(id).getId_category();
		_mvShare.addObject("productByIDCategory", _iProductService.GetProductByIDCategory(idCategory));

		return _mvShare;
	}
}